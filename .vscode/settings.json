{
  // Coding Conventions
  // https://confluence.abc-dev.net.au/display/PL/Coding+Conventions
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // Disable default JS validation that will complain about Flow syntax.
  "javascript.validate.enable": false,

  // Settings for Prettier
  "editor.formatOnSave": true,
  "editor.wordWrapColumn": 120,
  "editor.wordWrap": "wordWrapColumn",
  "prettier.singleQuote": true,
  "prettier.eslintIntegration": true,


  // Optional
  "search.exclude": {
    "**/node_modules": true
  },

  // Optional
  // if VSCode can't find the Flow binary we can give it the full path.
  // "flow.pathToFlow": "/Users/duckj6g/.nvm/versions/node/v8.2.1/bin/flow",
}